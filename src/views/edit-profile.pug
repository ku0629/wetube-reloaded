extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(type="file" id="avatar" name="avatar" accept="image/*") 
        input(value=loggedInUser.username,name="username",type="text",required,placeholder="Username")
        input(value=loggedInUser.email,name="email",type="email",required,placeholder="Email")
        input(value=loggedInUser.name,name="name",type="text",required,placeholder="Name")
        input(value=loggedInUser.location,name="location",type="text",placeholder="Location")
        input(type="submit",value="Update Profile")
    if !loggedInUser.socialOnly
        div.auth-switch
            a(href="change-password") Change password &rarr;