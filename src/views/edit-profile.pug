extends base.pug

block content 
    if errorMessage
        span=errorMessage
    img(src=loggedInUser.avatarUrl width="100" height="100")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file" id="avatar" name="avatar" accept="image/*") 
        input(value=loggedInUser.username,name="username",type="text",required,placeholder="Username")
        input(value=loggedInUser.email,name="email",type="email",required,placeholder="Email")
        input(value=loggedInUser.name,name="name",type="text",required,placeholder="Name")
        input(value=loggedInUser.location,name="location",type="text",placeholder="Location")
        input(type="submit",value="Update Profile")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change password &rarr;