header
    div.homeButton
        a(href="/").header__logo
            i.fab.fa-youtube.fa-xl
            span Premium
            span.country kr
    nav 
        ul
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn 
                li
                    a(href="/videos/upload") Upload
                li 
                    a(href="/users/edit") Edit-Profile
                li 
                    a(href="/users/logout") Logout 
                li 
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatarUrl===""
                            span 😢No avatar
                        else 
                            img(src=loggedInUser.avatarUrl,crossorigin).header__avatar
            else
                li 
                    a(href="/join") Join
                li 
                    a(href="/login").header__btn     Login
                
