mixin video(video)
    a(href=`/videos/${video.id}`).video-mixin
        div(style=`background-image:url(${video.thumbnailUrl});background-size:cover;background-position:center;`).video-mixin__thumb
        div.video-mixin__data
            span.video-mixin__title=video.title
            div.video-mixin__meta 
                span #{video.owner.name}
                div
                    span Views: #{video.meta.views}회 • 
                    span At: #{video.createdAt.getFullYear()}.#{video.createdAt.getMonth()+1}.#{video.createdAt.getDate()}

      
